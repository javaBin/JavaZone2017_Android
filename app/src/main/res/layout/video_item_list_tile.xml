<?xml version="1.0" encoding="utf-8"?>
<no.javazone.androidapp.v1.ui.widget.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/compact_list_tile"
    android:layout_height="@dimen/compact_list_tile"
    android:orientation="vertical"
    android:foreground="?android:selectableItemBackground"
    android:stateListAnimator="@animator/raise">

    <com.google.samples.apps.iosched.ui.widget.VideoThumbnail
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_normal"
        android:ellipsize="end"
        style="@style/Body2Text" />

</no.javazone.androidapp.v1.ui.widget.ForegroundLinearLayout>
